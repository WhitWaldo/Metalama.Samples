<Project>
    <Import Project="..\Caravela\eng\CaravelaVersion.props" Condition="Exists('.local')"/>
    <PropertyGroup>
        <CaravelaVersion Condition="'$(CaravelaVersion)'==''">0.4.0-preview</CaravelaVersion>

        <RestoreAdditionalProjectSources Condition="'$(IS_POSTSHARP_OWNED)'=='True'">
            $(RestoreAdditionalProjectSources);
            https://nuget.postsharp.net/nuget/caravela/
        </RestoreAdditionalProjectSources>

        <DebugCaravelaAnalyzer>False</DebugCaravelaAnalyzer>
        <DebugCaravelaIde>False</DebugCaravelaIde>
        <CaravelaDebugTransformedCode>False</CaravelaDebugTransformedCode>
        <Nullable>enable</Nullable>

    </PropertyGroup>

</Project>